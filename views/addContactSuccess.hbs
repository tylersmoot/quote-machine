<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Build A Quote</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">


    <style>
        .header,
        .crumbs {
            display: flex;
            justify-content: center;
        }

        table td {
            padding: 10px 10px 10px 10px;
        }
    </style>
</head>

<body>


    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <a class="navbar-brand" href="/">QuoteMachine</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Quotes</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/allContacts">Contacts</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>




    <!-- header section -->


    <div class="header">
        <h3>1. Add Contact</h3>
    </div>




    <!-- breadcrumbs section -->

    <div class="crumbs">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Add Contact</li>
            </ol>
        </nav>
    </div>




    <!-- add contact section -->

    <div class="container">


        <h3>Verify Contact Details</h3>


        <table>
            <thead>
                <tr>
                    <td>
                        First Name
                    </td>
                    <td>
                        {{newContact.firstName}}
                    </td>
                <tr>
                    <td>
                        Last Name
                    </td>
                    <td>
                        {{newContact.lastName}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Number
                    </td>
                    <td>
                        {{newContact.phoneNumber}}
                    </td>
                </tr>
                <tr>
                    <td>
                        Email
                    </td>
                    <td>
                        {{newContact.email}}
                    </td>
                </tr>
                <tr>
                    <td>Street</td>
                    <td>{{newContact.street}}</td>
                </tr>
                <tr>
                    <td>City</td>
                    <td>{{newContact.city}}</td>
                </tr>
                <tr>
                    <td>State</td>
                    <td>{{newContact.state}}</td>
                </tr>
                <tr>
                    <td>Zip Code</td>
                    <td>{{newContact.zipCode}}</td>
                </tr>

            </thead>

        </table>


        <!-- navigation buttons -->

        <div id="contactBtnsWrapper">

            <form action="/addMeasurements" method="get" style="float: left;">
                <button id='addMeasurementsNextBtn' type='submit' class="btn btn-primary">
                    Looks Good
                </button>
                <button class="btn btn-danger">Back<span>{{value}}</span>
                </button>

            </form>

        </div>

    </div>






    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>


</body>

</html>